extends ../layout

block content
    link(rel="stylesheet", href="./css/list.css")
    table.list 
        thead 
            tr 
                th No.
                th ISBN
                th 도서명
                th 저자
                th 출판사
                th 가격
                th 할인가
        tbody
            each item,index in bookList 
                tr 
                    td #{index+1}
                    td= item.isbn 
                    td= item.title
                    td= item.author
                    td= item.publisher
                    td= item.price
                    td= item.discout
    div.btn_box
        a(href="bookinfo/bookinput") 도서등록
