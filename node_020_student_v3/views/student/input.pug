extends ../layout

block content
    link(rel="stylesheet", href="/css/input.css")

    if !STD
        script(src="/js/input.js")

    h2.student 학생정보 입력 #{STD ? "수정" : "입력"}
    form.student.input(method="POST")
        //- value=`${STD ? STD.st_num : ""} STD가 있으면 std_num 보여주고 없으면 ""무시해라, 삼항연산자
        if !STD
            input#st_num(placeholder="학번을 입력하세요", name="st_num", 
            | value=`${STD ? STD.st_num : ""}`)
        else
            input#st_num(placeholder="학번을 입력하세요", name="st_num", 
            | value=`${STD ? STD.st_num : ""}`, readonly= "readonly")
        
        div.student.error.st_num
        input#st_name(placeholder="이름을 입력하세요", name="st_name",
        | value=`${STD ? STD.st_name : ""}`)
        div.student.error.st_name
        
        input#st_dept(placeholder="학과를 입력하세요", name="st_dept",
        | value=`${STD ? STD.st_dept : ""}`) 
        div.student.error.st_dept

        input#st_grade(name="st_grade", placeholder="학년을 입력하세요", type = "number",
        | value=`${STD ? STD.st_grade:""}`) 
        input#st_tel(name="st_tel", placeholder="전화번호를 입력하세요", type ="tel",
        | value=`${STD ? STD.st_tel:""}`) 
        input#st_addr(placeholder="주소를 입력하세요", name="st_addr",
        | value=`${STD ? STD.st_addr:""}`)


        input(type = "date")
        input(type = "time") 
        input(type = "datetime-local") 
        input(type = "file") 
        input(type = "color") 

        button(type=`${STD ? "submit" : "button"}`) 전송 

