extends ../layout

block content
    link(rel="stylesheet", href="/css/insert.css")
    script(src="/js/product.js")
    h3 #{PRODUCT ? PRODUCT.p_name : ""} 상품 #{PRODUCT ? "수정" : "입력"}
    form.insert(method="POST")
        section.insert
            div.insert.box
                if PRODUCT
                    input(type="text" name="p_code" placeholder="상품코드" value=`${PRODUCT.p_code}` readonly )
                else 
                    input(type="text" name="p_code" placeholder="상품코드")
                input(type="text" name="p_item" placeholder="품목" value=`${PRODUCT ? PRODUCT.p_item : ""}`)
                input(type="text" name="p_iprice" placeholder="매입단가" value=`${PRODUCT ? PRODUCT.p_iprice : ""}`)
            div.insert.box
                input(type="text" name="p_name" placeholder="상품이름" value=`${PRODUCT ? PRODUCT.p_name : ""}`)
                input(type="text" name="p_std" placeholder="규격" value=`${PRODUCT ? PRODUCT.p_std : ""}`)
                input(type="text" name="p_oprice" placeholder="매출단가" value=`${PRODUCT ? PRODUCT.p_oprice : ""}`)
        section.image
            div.image
            div.btn_box
                button.insert(type="submit") 입력
                button.list(type="button") 취소