extends ../books/main

block book_content 
    link(rel="stylesheet", href="/css/books/input.css")
    form.books(method="POST")
        fieldset 
            legend 도서정보 입력
            div.books.input
                input(type="number",value=`${book.isbn}`, inputmode="numeric" name="isbn", placeholder="ISBN, 도서코드")
                input(type="text",value=`${book.title}`, name="title", placeholder="도서명")
            div.books.input
                input(type="text",value=`${book.publisher}`, name="publisher", placeholder="출판사")
                input(type="text",value=`${book.author}`, name="author", placeholder="저자")
                input(type="text", name="compile", placeholder="역자")
            div.books.input
                input(type="number", name="price", placeholder="정가")
                input(type="number", name="discount", placeholder="할인가")
                input(type="date", name="pubdate", placeholder="발행일자")
            div.books.input
                input.btn.list(type="button", value="리스트로") 
                input.btn.reset(type="reset", value="새로작성")
                input.btn.submit(type="submit", value="저장")